{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsxImportSource": "vue",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@frontend/*": [
        "src/frontend/*"
      ],
      "@backend/*": [
        "src/backend/*"
      ]
    },
    "types": [
      "vite/client",
      "./src/preload"
    ],
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
